.main_content
	#recipe_top.row
		.col-md-4
			= image_tag @recipe.image.url(:medium), class: "recipe_image"
		.col-md-8
			#recipe_info
				%h1= @recipe.title
				%p.description=@recipe.description

	.row
		.col-md-6
			#ingredients
				%h2 Ingredientes
				%ul
					- @recipe.ingredients.each do |ingredient|
						%li= ingredient.name

		.col-md-6
			#directions
				%h2 Pasos a seguir
				%ul
					- @recipe.directions.each do |direction|
						%li= direction.step

	.row
		.col-md-12
			= link_to "Atras", root_path, class: "btn btn-default"
			= link_to "Editar", edit_recipe_path, class: "btn btn-default"
			= link_to "Eliminar", recipe_path, method: :delete, data:{confirm: "Estas seguro?"} ,class: "btn btn-default"
