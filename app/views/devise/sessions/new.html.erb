<div class="row">
	<div class="col-md-6 col-md-offset-3">

<h2>Iniciar Sesion</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label:' Correo electronico ', required: false, autofocus: true,input_html:{class: 'form-control'} %>
    <%= f.input :password, label:' Contraseña ', required: false,input_html:{class: 'form-control'} %>
    <%= f.input :remember_me,label:' Recordar contraseña ',input_html:{class: 'form-control'}, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Iniciar Sesion" ,class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


	</div>
	


</div>